    @doc: "A player in the Haunted House game"
    
    appearance:
    {
        shape: {type: "box", size: 1, $color: playerColor}
    }

    physical:
    {
        mass: 75 kg
    }

    walkingMovement:
    {
        walkingSpeed: 5 m/s
        runningSpeed: 10 m/s
        strafeSpeed: 2 m/s
        backSpeed: 3 m/s
    }

    userInput:
    {
    }

}